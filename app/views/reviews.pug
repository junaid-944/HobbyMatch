html
  head
    title Reviews - HobbyMatch
    link(rel="stylesheet" href="/style.css")
  body
    nav.navbar
      .container-nav
        h1.logo üéØ HobbyMatch
        .nav-links
          a(href="/dashboard") Dashboard
          a(href="/logout") Logout
    
    .container
      .header-section
        h1 All Reviews
        a.btn.btn-primary(href="/reviews/add") ‚≠ê Add Review
      
      if message
        .alert.alert-success= message
      
      if reviews.length > 0
        .table-wrapper
          table.data-table
            thead
              tr
                th Reviewer
                th Reviewed User
                th Rating
                th Comments
                th Date
                th Actions
            tbody
              each review in reviews
                tr
                  td= review.reviewer
                  td= review.reviewed_user
                  td= '‚≠ê ' + review.rating + '/5'
                  td= review.comments ? review.comments.substring(0, 40) + '...' : 'N/A'
                  td= new Date(review.created_at).toLocaleDateString()
                  td
                    .action-buttons
                      a.btn.btn-delete(href="/reviews/delete/" + review.review_id, onclick="return confirm('Delete this review?')") Delete
      else
        .no-data
          p No reviews found.
          a(href="/reviews/add") Write the first review
