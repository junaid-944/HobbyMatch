html
  head
    title Edit Hobby - HobbyMatch
    link(rel="stylesheet" href="/style.css")
  body
    nav.navbar
      .container-nav
        h1.logo ðŸŽ¯ HobbyMatch
        .nav-links
          a(href="/dashboard") Dashboard
          a(href="/logout") Logout
    
    .container
      .form-container
        h1 Edit Hobby
        
        if error
          .alert.alert-error= error
        
        form(method="POST" action="/hobbies/edit/" + hobby.hobby_id)
          .form-group
            label(for="hobby_name") Hobby Name
            input#hobby_name(type="text" name="hobby_name" value=hobby.hobby_name required)
          
          .button-group
            button.btn.btn-primary(type="submit") Update Hobby
            a.btn.btn-secondary(href="/hobbies") Cancel
    
    include ../footer.pug
