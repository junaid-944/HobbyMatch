html
  head
    title Events - HobbyMatch
    link(rel="stylesheet" href="/style.css")
  body
    nav.navbar
      .container-nav
        h1.logo ğŸ¯ HobbyMatch
        .nav-links
          a(href="/dashboard") Dashboard
          a(href="/logout") Logout
    
    .container
      .header-section
        h1 All Events
        a.btn.btn-primary(href="/events/add") ğŸ‰ Create Event
      
      if message
        .alert.alert-success= message
      
      if events.length > 0
        .table-wrapper
          table.data-table
            thead
              tr
                th Event Name
                th Date
                th Location
                th Created By
                th Actions
            tbody
              each event in events
                tr
                  td= event.event_name
                  td= new Date(event.event_date).toLocaleDateString()
                  td= event.location || 'N/A'
                  td= event.created_by || 'N/A'
                  td
                    .action-buttons
                      a.btn.btn-edit(href="/events/edit/" + event.event_id) Edit
                      a.btn.btn-delete(href="/events/delete/" + event.event_id, onclick="return confirm('Delete this event?')") Delete
      else
        .no-data
          p No events found.
          a(href="/events/add") Create the first event
